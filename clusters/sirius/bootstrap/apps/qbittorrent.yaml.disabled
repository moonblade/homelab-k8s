apiVersion: v1
kind: Namespace
metadata:
  name: qbittorrent
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: qbittorrent
  namespace: qbittorrent
spec:
  path: clusters/sirius/apps/qbittorrent
  interval: 15m
  prune: true
  wait: true
  timeout: 2m
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  healthChecks:
    - apiVersion: apps/v1
      kind: Deployment
      name: qbittorrent

