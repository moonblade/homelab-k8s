apiVersion: v1
kind: Namespace
metadata:
  name: homarr
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: homarr
  namespace: homarr
spec:
  path: clusters/sirius/apps/homarr
  interval: 15m
  prune: true
  wait: true
  timeout: 2m
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
